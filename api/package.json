{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with Better Auth and Oracle Database",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:pg:generate": "pnpm typeorm migration:generate -d typeorm-pg.config.ts",
    "migration:pg:run": "pnpm typeorm migration:run -d typeorm-pg.config.ts",
    "migration:pg:revert": "pnpm typeorm migration:revert -d typeorm-pg.config.ts",
    "migration:oracle:generate": "pnpm typeorm migration:generate -d typeorm-oracle.config.ts",
    "migration:oracle:run": "pnpm typeorm migration:run -d typeorm-oracle.config.ts",
    "migration:oracle:revert": "pnpm typeorm migration:revert -d typeorm-oracle.config.ts",
    "migration:generate": "pnpm migration:pg:generate && pnpm migration:oracle:generate",
    "migration:run": "pnpm migration:pg:run && pnpm migration:oracle:run",
    "migration:revert": "pnpm migration:pg:revert && pnpm migration:oracle:revert"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation": "^0.207.0",
    "@opentelemetry/instrumentation-nestjs-core": "^0.54.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-logs": "^0.207.0",
    "@opentelemetry/sdk-metrics": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@opentelemetry/winston-transport": "^0.18.0",
    "@scalar/nestjs-api-reference": "^1.0.0",
    "@thallesp/nestjs-better-auth": "^2.0.0",
    "better-auth": "latest",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "oracledb": "^6.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.20",
    "winston": "^3.18.3",
    "xstate": "^5.25.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.9.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/nock": "^11.1.0",
    "@types/node": "^22.0.0",
    "@types/oracledb": "^6.0.0",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.0.0",
    "msw": "^2.11.6",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["src/**/*.(t|j)s"],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
     "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
